
#include <Wire.h>

byte simulData[][7] = {
  {'1','2','3','4','5','6',0x1B}, {'1','2','3','5','5','6',0x1C}, {'2','2','3','4','5','6',0x1B},
  {'1','2','3','4','6','6',0x1C}, {'1','3','3','4','5','6',0x1B}, {'1','1','3','4','5','6',0x1C},
  {'1','4','3','4','5','6',0x1D}, {'0','1','2','3','4','5',0x1C}, {'1','3','3','4','5','6',0x1B},
  {'1','2','3','4','4','3',0x1C}, {'1','3','3','3','5','6',0x1B}, {'1','2','2','2','5','6',0x1C},
  {'1','4','3','4','5','6',0x1B}, {'1','5','5','2','2','2',0x1C}, {'1','5','5','2','2','1',0x1B},
  {'1','1','1','2','2','6',0x1B}, {'1','2','4','4','4','2',0x1C}, {'1','5','1','2','3','0',0x1B},
  {'1','0','3','0','5','6',0x1B}, {'1','5','5','0','0','1',0x1C}, {'1','5','1','0','0','1',0x1B}
};

int opt;

void setup() {
  pinMode(LED_BUILTIN, OUTPUT);
  Serial.begin(4800);
  opt = 0;
  delay(101);
  srand(millis());
  digitalWrite(LED_BUILTIN, HIGH);
}

void loop() {
  srand(millis());
  opt = ((rand()*1.0)/RAND_MAX) * 21;
  digitalWrite(LED_BUILTIN, LOW);
  for (byte p = 0; p < 7; p++) {
    Serial.write(simulData[opt][p]);
  }
  Serial.flush();
  digitalWrite(LED_BUILTIN, HIGH);
  delay(50);
}