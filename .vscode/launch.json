{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Local File",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/elcan_weight",
      "program": "${workspaceRoot}/elcan_weight/main.rb"
    },
    {
      "name": "Listen for rdebug-ide",
      "type": "Ruby",
      "request": "attach",
      "cwd": "${workspaceRoot}/elcan_weight",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234",
      "remoteWorkspaceRoot": "${workspaceRoot}/elcan_weight"
    },
    {
      "name": "Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/elcan_weight/",
      "program": "${workspaceRoot}/elcan_weight/bin/rails",
      "args": [
        "server"
      ]
    },
    {
      "name": "RSpec - all",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/elcan_weight",
      "program": "${workspaceRoot}/elcan_weight/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}/elcan_weight"
      ]
    },
    {
      "name": "RSpec - active spec file only",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/elcan_weight",
      "program": "${workspaceRoot}/elcan_weight/bin/rspec",
      "args": [
        "-I",
        "${workspaceRoot}/elcan_weight",
        "${file}"
      ]
    },
    {
      "name": "Cucumber",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}/elcan_weight",
      "program": "${workspaceRoot}/elcan_weight/bin/cucumber"
    }
  ]
}